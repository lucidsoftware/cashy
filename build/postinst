#!/bin/bash

INSTALL_DIR=/srv/cashy
mkdir -p "${INSTALL_DIR}"
chown -R nobody "${INSTALL_DIR}"
chgrp -R ops "${INSTALL_DIR}"
cd "${INSTALL_DIR}"

VERSION=$(cat "${INSTALL_DIR}/bin/staged-version")

pushd "${INSTALL_DIR}/bin"
if [ -e staged ];then
        rm -rf staged
fi
ln -s "staged-${VERSION}" staged
popd

